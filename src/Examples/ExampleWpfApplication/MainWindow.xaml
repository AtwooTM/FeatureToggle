<Window x:Class="ExampleWpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toggles="clr-namespace:FeatureToggle.Toggles;assembly=FeatureToggle.WpfExtensions"
        Title="Example of coarse grained (i.e. at the UI level) feature toggle." Height="350" Width="525">
    <Window.Resources>
        <toggles:FeatureToggleToVisibilityConverter x:Key="Converter"></toggles:FeatureToggleToVisibilityConverter>
    </Window.Resources>
    <Grid>
        <StackPanel>            
            <Button>Feature 1 - exisiting in production - not toggled</Button>
            <Button Visibility="{Binding Path=Feature2Toggle, Converter={StaticResource Converter}}">Feature 2 - still in development</Button>
            <TextBlock>Note that the feature2 button is not visible at runtime because it is disabled in the app config.</TextBlock>
            <Button Visibility="{Binding Path=Feature3Toggle, Converter={StaticResource Converter}}">Feature 3 - enabled because it's after a toggled date</Button>            
        </StackPanel>
    </Grid>
</Window>
